{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "ktb-ui-components": ["dist/ktb-ui-components/ktb-ui-components", "dist/ktb-ui-components"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
