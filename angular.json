{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ktb-ui-components": {
      "projectType": "library",
      "root": "projects/ktb-ui-components",
      "sourceRoot": "projects/ktb-ui-components/src",
      "prefix": "ktb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ktb-ui-components/tsconfig.lib.json",
            "project": "projects/ktb-ui-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ktb-ui-components/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ktb-ui-components/src/test.ts",
            "tsConfig": "projects/ktb-ui-components/tsconfig.spec.json",
            "karmaConfig": "projects/ktb-ui-components/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ktb-ui-components/tsconfig.lib.json",
              "projects/ktb-ui-components/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "ktb-ui-components",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  }
}
